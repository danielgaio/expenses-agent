{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": false,
    "jsx": "preserve",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "incremental": true,
    "composite": true,
    "paths": {
      "@expenses-agent/shared-types": ["./packages/shared-types/src"],
      "@expenses-agent/supabase-client": ["./packages/supabase-client/src"],
      "@expenses-agent/ai-services": ["./packages/ai-services/src"],
      "@expenses-agent/utils": ["./packages/utils/src"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next", "coverage"]
}
